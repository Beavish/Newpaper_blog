<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  
  </thead>


  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <div class="container">
        <td><%= post.title %></td>
        </div>
        <div class="container">
        <td><%= post.description %></td>
        </div>
        <td><%= post.Genre %></td>
        <td><%= post.premium %></td>
      
        <td><%= link_to 'Show', post %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
